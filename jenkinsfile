pipeline {
    agent any

    stages {
            stage ('Prep') {
            echo "Ensure the pipeline is configured to clean the Jenkins workspace before checkout"
            deleteDir()
            checkout scm
     }
        stage('Build') {
                        steps   {
                                echo 'Building..'
                            
                                def status
                                // Clean the CI DB to get a fresh build
                                status = bat returnStatus: true, label: "Clean", script:" FLYWAY clean info -url=jdbc:mysql://localhost:3306/moviesCI -user=root -password=Redg@te1"
                                echo "Status of Running CI build: $status"
                                if (status != 0) { error('Running CI build failed') }
                                }
                        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying....'
            }
        }
    }
}